<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FitSammenWebClient</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FitSammenWebClient.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" />
</head>
<body>
    <header>
        <div class="fs-header-inner">
            <div class="logo">
                <!--Logo-->
                &#128170;
               FitSammen
            <div class="tagline">Danmarks sjoveste fitnesskæde</div>
            </div>
        <div class="menu">
            <nav>
                <ul>
                    <li> <a class="Hjem" asp-area="" asp-controller="Home" asp-action="Index">Hjem</a></li>
                    <li>  <a class="MineHold" asp-area="" asp-controller="Home" asp-action="MineHold">Mine Hold</a></li>
                    <li>  <a class="OmOs" asp-area="" asp-controller="Home" asp-action="Index">Om os</a></li>
                    <li>  <a class="Kontakt" asp-area="" asp-controller="Home" asp-action="Index">Kontakt</a></li>
                </ul>
            </nav>
        </div>
        <div class="profil">
            <ul>
                <li>
                    <button type="button"
                            class="profilelogo btn btn-link p-0"
                            data-bs-toggle="modal"
                            data-bs-target="#loginModal">
                        &#128100;
                    </button>
                </li>
            </ul>
        </div>

        </div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
  
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <div class="modal fade" id="loginModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content fs-login-modal">
                <div class="modal-body">

                    <h2 class="fs-login-title">Log ind på din konto</h2>

                    <form asp-controller="Account" asp-action="Login" method="post">
                        <div class="mb-3">
                            <label for="LoginEmail" class="form-label">Email</label>
                            <input id="LoginEmail" name="Email" class="form-control fs-login-input" />
                        </div>

                        <div class="mb-3">
                            <label for="LoginPassword" class="form-label">Adgangskode</label>

                            <div class="fs-password-container">
                                <input id="LoginPassword"
                                       name="Password"
                                       type="password"
                                       class="form-control fs-login-input" />

                                <button type="button"
                                        class="fs-password-toggle"
                                        onclick="togglePassword()">
                                    <span id="passwordToggleText">Vis</span>
                                </button>
                            </div>
                        </div>



                        <button type="submit" class="btn fs-login-btn w-100">Log ind</button>
                    </form>

                    <div class="fs-login-extra">
                        <a href="#">Glemt adgangskode?</a><br />
                        <span>Har du ikke en konto? <a href="#">Opret dig her</a></span>
                    </div>

                </div>
            </div>
        </div>
    </div>
    <script>
        function togglePassword() {
            const input = document.getElementById("LoginPassword");
            const label = document.getElementById("passwordToggleText");

            const isHidden = input.type === "password";
            input.type = isHidden ? "text" : "password";
            label.textContent = isHidden ? "Skjul" : "Vis";
        }
    </script>
</body>
</html>

